{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "noa",
    "patterns": [
        {
            "include": "#all"
        }
    ],
    "repository": {
        "all": {
            "patterns": [
                {
                    "include": "#comments"
                },
                {
                    "include": "#interpolated-strings"
                },
                {
                    "include": "#strings"
                },
                {
                    "include": "#keywords"
                },
                {
                    "include": "#calls"
                },
                {
                    "include": "#numbers"
                },
                {
                    "include": "#names"
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.other.noa",
                    "match": "\\b(func|let)\\b"
                },
                {
                    "name": "storage.modifier.noa",
                    "match": "\\bmut\\b"
                },
                {
                    "name": "keyword.other.noa",
                    "match": "=>"
                },
                {
                    "name": "keyword.control.noa",
                    "match": "\\b(if|else|loop|return|break|continue)\\b"
                },
                {
                    "name": "constant.language.boolean.noa",
                    "match": "\\b(true|false)\\b"
                },
                {
                    "name": "keyword.operator.noa",
                    "match": "\\+|-|\\*|\\/|!|<|>|<=|>=|==|!="
                },
                {
                    "name": "meta.punctuation.noa",
                    "match": ";|,|=|\\(|\\)|{|}"
                }
            ]
        },
        "calls": {
            "match": "(\\p{L}(?:\\p{L}|\\p{N})*)\\s*\\(",
            "captures": {
                "1": {
                    "name": "entity.name.function.noa"
                }
            }
        },
        "numbers": {
            "name": "constant.numeric.noa",
            "match": "\\b([0-9]+(?:\\.[0-9]+)?)"
        },
        "names": {
            "name": "variable.noa",
            "match": "\\p{L}(?:\\p{L}|\\p{N})*"
        },
        "comments": {
            "name": "comment.line.double-slash.noa",
            "match": "\\/\\/.*"
        },
        "strings": {
            "name": "string.quoted.double.noa",
            "begin": "\"",
            "end": "\"|$",
            "patterns": [
                {
                    "begin": "\\\\{",
                    "end": "}",
                    "beginCaptures": {
                        "0": {
                            "name": "keyword.other.noa"
                        }
                    },
                    "endCaptures": {
                        "0": {
                            "name": "keyword.other.noa"
                        }
                    },
                    "patterns": [
                        {
                            "include": "#all"
                        }
                    ]
                },
                {
                    "include": "#escape-sequence"
                }
            ]
        },
        "interpolated-strings": {
            "name": "string.quoted.double.noa",
            "begin": "(\\\\)\"",
            "end": "\"|$",
            "beginCaptures": {
                "1": {
                    "name": "keyword.other.noa"
                }
            },
            "patterns": [
                {
                    "begin": "{",
                    "end": "}",
                    "beginCaptures": {
                        "0": {
                            "name": "keyword.other.noa"
                        }
                    },
                    "endCaptures": {
                        "0": {
                            "name": "keyword.other.noa"
                        }
                    },
                    "patterns": [
                        {
                            "include": "#all"
                        }
                    ]
                },
                {
                    "include": "#escape-sequence"
                },
                {
                    "include": "#interpolation-escape"
                }
            ]
        },
        "escape-sequence": {
            "name": "constant.character.escape.noa",
            "match": "\\\\[\\\\0nrt\"]"
        },
        "interpolation-escape": {
            "name": "constant.character.escape.noa",
            "match": "\\\\{"
        }
    },
    "scopeName": "source.noa"
}
