{
    "name": "noa-lang",
    "displayName": "Noa Lang",
    "description": "Language support for Noa",
    "version": "0.0.1",
    "author": {
        "name": "thinker227"
    },
    "publisher": "thinker227",
    "readme": "./README.md",
    "license": "MIT",
    "repository": {
        "url": "https://github.com/thinker227/noa",
        "type": "git"
    },
    "engines": {
        "vscode": "^1.86.0"
    },
    "categories": ["Programming Languages"],
    "main": "./out/src/extension",
    "enabledApiProposals": [],
    "contributes": {
        "languages": [
            {
                "id": "noa",
                "aliases": ["Noa", "noa"],
                "extensions": [".noa"],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "noa",
                "scopeName": "source.noa",
                "path": "./syntaxes/noa.tmLanguage.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.2",
        "@types/node": "^20.8.0",
        "@types/vscode": "^1.82.0",
        "@vscode/test-electron": "^2.3.4",
        "glob": "^10.3.10",
        "mocha": "^10.2.0",
        "source-map-support": "^0.5.21",
        "tmp-promise": "^3.0.3",
        "typescript": "^5.2.2"
    },
    "dependencies": {
        "vscode-languageclient": "^9.0.1",
        "vscode-languageserver-protocol": "^3.17.5"
    }
}
